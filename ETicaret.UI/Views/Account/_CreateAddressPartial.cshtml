@model ETicaret.UI.Models.AccountVMs.CustomerAddressVM


<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateAddress" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="AddressName" class="control-label"></label>
                <input asp-for="AddressName" class="form-control w-100" />
                <span asp-validation-for="AddressName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control w-100" rows="5"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-sm btn-outline-primary me-1 w-100">Create</button>
            </div>
            @* @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
            } *@
        </form>
    </div>
</div>

